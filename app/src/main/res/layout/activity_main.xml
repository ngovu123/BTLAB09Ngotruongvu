<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LAB09- Ngô Trường Vũ"
        android:textSize="26sp"
        android:layout_gravity="center"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="listview"
        android:text="Listview trường hợp 1"
        android:id="@+id/btnlistview" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="listview2"
        android:text="Listview trường hợp 2"
        android:id="@+id/btnlistview2"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="listview3"
        android:text="Listview trường hợp 3"
        android:id="@+id/btnlistview3"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="CAUSpinner"
        android:text="Spinner"
        android:id="@+id/btnCAUSpinner"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="autotextview"
        android:text="AutocompleteTextView"
        android:id="@+id/btnautotextview"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="btGridview"
        android:text="BTGridview"
        android:id="@+id/btnbtGridview"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="btimesection"
        android:text="Timesection"
        android:id="@+id/btnbttimesection"
        />

</LinearLayout>